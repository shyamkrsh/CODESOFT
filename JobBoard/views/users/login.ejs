<%- layout("./layouts/boilerplate.ejs") %>
<body>
    <div class="form-container">
        <form action="/login" method="post" class="needs-validations" novalidate>
            <h2>Login to your account</h2><br>
            <div class="mb-3">
                <label for="username" class="form-label">Enter your email</label>
                <input type="email" placeholder="enter email Id" class="form-control" required name="username">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Create Password</label>
                <input type="password" placeholder="enter password" class="form-control" required name="password">
            </div>
            <button class="btn btn-primary">Login</button>
            <a href="/signup" class="btn btn-dark">Sign Up</a>
        </form>
    </div>
</body>